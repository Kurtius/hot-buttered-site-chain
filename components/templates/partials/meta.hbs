<meta charset="UTF-8">
<!--  charset must be included completely within the first 1024 bytes of the document
      https://github.com/h5bp/html5-boilerplate/blob/master/dist/doc/html.md#the-order-of-the-title-and-meta-tags -->
<meta http-equiv="x-ua-compatible" content="ie=edge">
<!--  x-ua-compatible needs to be included before all other tags except for the <title> and the other <meta> tags
      https://github.com/h5bp/html5-boilerplate/blob/master/dist/doc/html.md#x-ua-compatible -->

<meta name="viewport" content="width=device-width, initial-scale=1">
<!--  check viewport shit here:
      https://developer.apple.com/library/safari/documentation/AppleApplications/Reference/SafariWebContent/UsingtheViewport/UsingtheViewport.html -->

<!-- <title>{{ meta-title }} auf {{ site.name }}</title> -->
<title>{{ meta-title }}</title>
<!--  document title less than 55 characters:
      https://github.com/thedaviddias/Front-End-Checklist -->
<meta name="description" content="{{ meta-description }}">
<!--  Description of the page less than 150 characters
      https://github.com/thedaviddias/Front-End-Checklist -->

<!-- ICONS -->
<link rel="icon" type="image/x-icon" href="{{ site.url }}favicon.ico">
<!--  Standard favicon
      https://github.com/thedaviddias/Front-End-Checklist -->
<link rel="icon" type="image/png" href="{{ site.url }}favicon.png">
<!--  Recommended favicon format
      https://github.com/thedaviddias/Front-End-Checklist -->

<!--  Apple Specials -->
<link rel="apple-touch-icon" href="/apple-touch-icon.png">
<!--  touch icon see: assets/icons.sketch
      https://github.com/h5bp/html5-boilerplate/blob/master/dist/doc/extend.md#apple-touch-icons -->

<!--  Windows Specials -->
<meta name="application-name" content="{{ name }}">
<meta name="msapplication-TileImage" content="{{ site.url }}metro-tile.png">
<!--  some windows related stuff. image see: assets/icons.sketch
      https://github.com/h5bp/html5-boilerplate/blob/master/dist/doc/extend.md#ie-pinned-sites-ie9
      https://blogs.msdn.microsoft.com/ie/2012/06/08/high-quality-visuals-for-pinned-sites-in-windows-8/ -->

<!--  SEO Specials -->
<link rel="canonical" href="{{ site.meta-canonical }}">
<!--  SEO relevant canonical link
      https://moz.com/learn/seo/canonicalization -->
<link rel="sitemap" type="application/xml" title="Sitemap" href="{{ site.url }}sitemap.xml">
<!--  SEO relavant sitemap
      http://www.sitemaps.org/protocol.html -->
<meta name="google-site-verification" content="{{ site.googleVerification }}" />
<!--  Google Search Results Verify your site ownership at https://www.google.com/webmasters/
      https://support.google.com/webmasters/answer/34592 -->

<!--  facebook Open Graph -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{path}}">
<meta property="og:title" content="{{ meta-title }}">
<meta property="og:description" content="{{ meta-description }}">
<meta property="og:site_name" content="{{ name }}">
<meta property="og:locale" content="{{ site.locale }}">
<meta property="og:image" content="{{ site.url }}og-image.png">
<!--  Next tags are optional but recommended -->
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<!--  some facebook related stuff. image see: assets/icons.sketch
      https://github.com/thedaviddias/Front-End-Checklist -->

<!--  twitter card -->
<meta name="twitter:card" content="{{ meta-description }}">
<meta name="twitter:title" content="{{ meta-title }}">
<!-- <meta name="twitter:site" content="@site_account">
<meta name="twitter:creator" content="@individual_account"> -->
<meta name="twitter:url" content="{{ site.url }}{{path}}">
<meta name="twitter:description" content="{{ meta-description }}">
<meta name="twitter:image" content="{{ site.url }}apple-touch-icon.png">
<!--  twitter. image see: assets/icons.sketch
      https://github.com/thedaviddias/Front-End-Checklist -->
